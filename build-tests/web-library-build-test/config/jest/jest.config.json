{
  "rootDir": "../../",
  "globals": {
    "ts-jest": {
      "tsConfig": "config/jest/tsconfig.json",
      "packageJson": "package.json"
    }
  },
  "moduleFileExtensions": ["js"],
  "moduleNameMapper": {
    "ts-jest": "<rootDir>/node_modules/ts-jest/index.js"
  },
  "transform": {
    "^.+\\.(js|ts|tsx)$": "ts-jest"
  }
}
